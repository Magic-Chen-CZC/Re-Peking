page {
  background-color: #f4f4f4;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.plan-container {
  position: relative;
  min-height: 100vh;
  padding: 180rpx 64rpx 200rpx; /* Symmetrical horizontal padding */
  box-sizing: border-box;
}

/* Paper Texture */
.paper-texture {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  opacity: 0.03;
  z-index: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
}

/* Header */
.header-section {
  padding-left: 48rpx;
  border-left: 4rpx solid rgba(0, 0, 0, 0.1);
  margin-bottom: 80rpx;
  position: relative;
  z-index: 1;
  margin-left: 0; /* Removed offset */
}

.header-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.tag-draft {
  font-size: 18rpx;
  font-weight: bold;
  background: #000;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.tag-trip {
  font-size: 18rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: rgba(0, 0, 0, 0.4);
}

.tag-mode {
  font-size: 18rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.3);
}

.header-title {
  font-size: 64rpx;
  font-family: serif;
  font-weight: bold;
  color: #111827;
  margin-bottom: 16rpx;
  letter-spacing: -2rpx;
}

.header-desc {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  line-height: 1.6;
  max-width: 480rpx;
}

/* Content Area */
.content-area {
  padding: 0; /* Removed asymmetrical padding */
  position: relative;
  z-index: 10;
}

.section-header {
  position: relative;
  padding-bottom: 16rpx;
  padding-left: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 16rpx;
}

.vertical-line {
  position: absolute;
  left: 10rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e5e7eb;
}

.section-title {
  font-size: 20rpx;
  font-weight: bold;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

.section-count {
  font-size: 20rpx;
  font-family: monospace;
  color: #9ca3af;
}

.upcoming {
  margin-top: 48rpx;
  margin-bottom: 32rpx;
  align-items: center;
}
.upcoming .section-title {
  color: #6b7280;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.header-controls {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.control-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.3s;
}
.control-btn:active {
  background: #e5e7eb;
}
.control-btn.optimizing {
  background: #f3e8ff;
  color: #9333ea;
}
.control-btn.active {
  background: #000;
  color: #fff;
}

.divider {
  width: 2rpx;
  height: 32rpx;
  background: #d1d5db;
  margin: 0 8rpx;
}

/* Add Button */
.add-button-container {
  padding-left: 0; /* Removed offset */
  margin-top: 64rpx;
  display: flex;
  justify-content: center;
}

.add-button {
  width: 100%;
  padding: 32rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #9ca3af;
  transition: all 0.3s;
}
.add-button:active {
  background: #fff;
  border-color: #9ca3af;
  color: #4b5563;
}

.plus-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #6b7280;
}

.add-button text {
  font-size: 20rpx;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* Footer */
.footer-signature {
  margin-top: 64rpx;
  padding-top: 64rpx;
  border-top: 4rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.6;
  filter: grayscale(100%);
  padding-bottom: 160rpx;
}

.brand {
  font-family: serif;
  font-style: italic;
  font-size: 40rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
}

.date {
  font-size: 16rpx;
  font-family: monospace;
  color: #d1d5db;
  text-transform: uppercase;
  letter-spacing: 6rpx;
}

/* Floating Share */
.floating-share {
  position: fixed;
  bottom: 192rpx; /* Above tab bar */
  left: 50%;
  transform: translateX(-50%);
  z-index: 40;
}

.share-btn {
  background: #111827;
  color: #fff;
  padding: 28rpx 48rpx;
  border-radius: 999rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.share-btn text {
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
  text-transform: uppercase;
}

.share-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
  backdrop-filter: blur(8rpx);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60vh;
  background: #fff;
  border-radius: 48rpx 48rpx 0 0;
  display: flex;
  flex-direction: column;
  box-shadow: 0 -16rpx 64rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  padding: 48rpx;
  border-bottom: 2rpx solid #f3f4f6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-family: serif;
  font-weight: bold;
  font-size: 40rpx;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  background: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
}

.rec-item {
  padding: 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.rec-item:active {
  background: #f9fafb;
}

.rec-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.rec-icon {
  width: 96rpx;
  height: 96rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #9ca3af;
}

.rec-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.rec-name {
  font-weight: bold;
  font-size: 28rpx;
  color: #111827;
}

.rec-meta {
  font-size: 24rpx;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.rec-add {
  font-size: 32rpx;
  color: #3b82f6;
}

/* Status Actions */
.status-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 16rpx 32rpx;
  margin-top: -16rpx;
  margin-bottom: 24rpx;
}

.status-btn {
  font-size: 20rpx;
  font-weight: bold;
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  border: 2rpx solid;
  background: transparent;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.status-btn.arrive {
  color: #2563eb;
  border-color: #2563eb;
}

.status-btn.complete {
  color: #16a34a;
  border-color: #16a34a;
}

.status-btn.arrive:active {
  background: rgba(37, 99, 235, 0.1);
}

.status-btn.complete:active {
  background: rgba(22, 163, 74, 0.1);
}

/* 开发者模式控制面板 */
.dev-controls {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 100;
}

.dev-btn {
  background: rgba(255, 165, 0, 0.9);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.3);
  white-space: nowrap;
}

.dev-btn.inject {
  background: rgba(0, 122, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

/* 定位注入弹窗 */
.location-injector {
  max-width: 600rpx;
}

.input-row {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.coord-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.inject-btn {
  width: 100%;
  background: #007AFF;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}
