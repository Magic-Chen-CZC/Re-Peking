/* Tabletop Texture */
.tabletop-texture {
  position: absolute;
  inset: 0;
  opacity: 0.4;
  pointer-events: none;
  background-image: url("https://www.transparenttextures.com/patterns/concrete-wall.png");
  z-index: 0;
}

/* Header */
.header {
  padding-top: 120rpx; /* Status bar space */
  padding-left: 60rpx; /* Matched with posts-wrapper */
  padding-right: 60rpx;
  padding-bottom: 20rpx;
  z-index: 20;
  position: relative;
}

/* ... existing styles ... */

/* Scrollable Table */
.table-scroll {
  flex: 1;
  min-height: 0;
  height: 0;
  position: relative;
  z-index: 10;
}



.posts-wrapper {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 60rpx 260rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.bottom-spacer {
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
  margin-top: 32rpx;
}

.spacer-line {
  width: 120rpx;
  height: 8rpx;
  background: #d1d5db;
  border-radius: 999rpx;
}

/* Modal */
.modal-overlay {
  position: fixed;
  inset: 0;
  z-index: 100;
  background: rgba(0,0,0,0.2); /* Lighter backdrop */
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  height: 90vh;
  background: #fff;
  border-radius: 64rpx 64rpx 0 0;
  box-shadow: 0 -20rpx 80rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  animation: slideUp 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-handle {
  position: absolute;
  top: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 96rpx;
  height: 8rpx;
  background: #e5e5e5;
  border-radius: 999rpx;
  z-index: 20;
}

.modal-header {
  padding: 40rpx 48rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,255,255,0.98);
  z-index: 10;
  border-bottom: 2rpx solid #f3f4f6;
}

.header-btn {
  min-width: 120rpx;
  height: 64rpx;
  padding: 0 24rpx;
  border-radius: 999rpx;
  background: #111827;
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}

.header-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 2rpx;
}

.header-spacer {
  width: 120rpx;
  height: 64rpx;
}

/* Scrollbar Hiding */
scroll-view.table-scroll::-webkit-scrollbar,
scroll-view.modal-body::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

scroll-view.table-scroll,
scroll-view.modal-body {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.modal-body {
