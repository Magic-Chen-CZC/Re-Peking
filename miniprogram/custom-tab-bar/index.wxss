.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 10rpx; /* Push content down slightly */
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* CSS Icons */
.icon-plan {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #999;
  border-radius: 6rpx;
}
.active .icon-plan {
  border-color: #4A90E2;
  background: rgba(74, 144, 226, 0.2);
}

.icon-map {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #999;
  border-radius: 50%;
  position: relative;
}
.icon-map::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 4rpx;
  height: 16rpx;
  background: #999;
  transform: translate(-50%, -50%) rotate(45deg);
}
.active .icon-map {
  border-color: #4A90E2;
}
.active .icon-map::after {
  background: #4A90E2;
}

.icon-share {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #999;
  border-radius: 50%;
  position: relative;
}
.icon-share::before {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 16rpx;
  height: 16rpx;
  border: 4rpx solid #999;
  border-radius: 50%;
}
.active .icon-share {
  border-color: #4A90E2;
}
.active .icon-share::before {
  border-color: #4A90E2;
}

.tab-text {
  font-size: 18rpx;
  font-weight: 500;
}
