.ticket-container {
  position: relative;
  width: 100%;
  margin: 0;
  box-sizing: border-box;
  height: 340rpx;
  display: flex;
  border-radius: 24rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 20rpx 30rpx -6rpx rgba(0, 0, 0, 0.1);
}

.ticket-container.focused {
  box-shadow: 0 70rpx 120rpx -30rpx rgba(0, 0, 0, 0.4);
}

/* Colors */
.bg-indigo-600 { background-color: #4f46e5; }
.bg-emerald-600 { background-color: #059669; }
.bg-sky-600 { background-color: #0284c7; }
.bg-rose-600 { background-color: #e11d48; }
.bg-gray-800 { background-color: #1f2937; }
.text-white { color: #fff; }

/* Stub Section */
.stub-section {
  width: 26%;
  height: 100%;
  border-right: 4rpx dashed rgba(255, 255, 255, 0.2);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  box-sizing: border-box;
}

.stub-hole-top {
  position: absolute;
  top: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 24rpx;
  background: #e5e5e5;
  border-radius: 50%;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.1);
  opacity: 0.4;
}

.stub-meta {
  margin-top: 16rpx;
  font-size: 20rpx;
  font-family: monospace;
  color: rgba(255, 255, 255, 0.7);
  font-weight: bold;
  transform: rotate(-90deg);
  white-space: nowrap;
  letter-spacing: 4rpx;
}

.stub-archetype {
  margin-top: auto;
  margin-bottom: 16rpx;
  font-size: 48rpx;
  font-weight: 900;
  font-family: serif;
}

.stub-pattern {
  position: absolute;
  inset: 0;
  opacity: 0.2;
  background-image: radial-gradient(#fff 1px, transparent 1px);
  background-size: 8rpx 8rpx;
}

/* Content Section */
.content-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  background: #fff;
  height: 100%;
}

.content-header {
  padding: 12rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f3f4f6;
  z-index: 10;
}

.post-title {
  font-family: serif;
  font-weight: bold;
  font-size: 36rpx;
  color: #111827;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.content-image-area {
  position: relative;
  flex: 1;
  width: 100%;
  overflow: hidden;
  background: #f3f4f6;
}

.post-image {
  width: 100%;
  height: 100%;
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.1), transparent);
}

/* Notches */
.notch {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background: #e5e5e5;
  border-radius: 50%;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.1);
  z-index: 20;
}

.notch.left {
  left: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
}

.notch.top {
  left: 26%;
  top: -12rpx;
  transform: translateX(-50%);
  width: 32rpx;
  height: 32rpx;
}

.notch.bottom {
  left: 26%;
  bottom: -12rpx;
  transform: translateX(-50%);
  width: 32rpx;
  height: 32rpx;
}

.notch.right {
  right: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
}
