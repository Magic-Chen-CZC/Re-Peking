.ticket-container {
  position: relative;
  margin-bottom: 32rpx;
  padding-left: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

/* Timeline Node */
.timeline-node {
  position: absolute;
  left: 0;
  top: 56rpx; /* Adjusted to match card top */
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  border: 4rpx solid;
  z-index: 10;
  background: #fff;
}
.timeline-node.visited {
  background: #000;
  border-color: #000;
}
.timeline-node.planned {
  background: #fff;
  border-color: #d1d5db;
}

/* Vertical Line */
.timeline-line {
  position: absolute;
  left: 5rpx; /* Center of node (12rpx/2 - 1rpx) */
  top: -30rpx;
  bottom: -40rpx;
  width: 2rpx;
  background: #e5e7eb;
  z-index: 0;
}

/* Ticket Card */
.ticket-card {
  display: flex;
  flex-direction: column;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  transition: all 0.3s;
  border: 2rpx solid;
}
.bg-white { background: #fff; }
.border-gray-200 { border-color: #e5e7eb; }
.border-dashed { border-style: dashed; }
.border-gray-300 { border-color: #d1d5db; }

.card-main {
  display: flex;
  height: 224rpx; /* 28 * 8rpx */
}

/* Left Section */
.card-left {
  width: 224rpx; /* Fixed width to match height for square aspect ratio */
  flex-shrink: 0;
  position: relative;
  height: 100%;
  border-right: 2rpx solid #f3f4f6;
}

.stamp-ok {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  transform: rotate(-15deg);
}
.stamp-inner {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12rpx;
  font-weight: bold;
  color: #fff;
  text-transform: uppercase;
  background: rgba(255, 255, 255, 0.1);
}

/* Right Section */
.card-right {
  flex: 1; /* Take remaining space */
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  background: #fff;
  min-width: 0; /* Prevent flex overflow */
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.meta-type {
  font-family: monospace;
  font-size: 18rpx;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.expand-icon {
  font-size: 20rpx;
  color: #d1d5db;
  transition: transform 0.3s;
}
.expand-icon.rotated {
  transform: rotate(180deg);
}

.controls {
  display: flex;
  gap: 8rpx;
  margin-right: -8rpx;
  margin-top: -8rpx;
}

.reorder-btns {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.btn-icon {
  padding: 4rpx 8rpx;
  background: #f9fafb;
  border-radius: 4rpx;
  color: #4b5563;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-icon.disabled {
  opacity: 0.3;
}
.btn-icon.delete {
  color: #d1d5db;
}
.btn-icon.delete:active {
  color: #ef4444;
}

.attraction-name {
  font-family: serif;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 1.2;
}
.text-black { color: #111827; }
.text-gray-500 { color: #6b7280; }

.card-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: auto;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}
.status-badge.visited {
  background: #f3f4f6;
}
.status-badge.planned {
  border: 2rpx solid #e5e7eb;
}
.status-badge text {
  font-size: 18rpx;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}
.visited text { color: #4b5563; }
.planned text { color: #9ca3af; }

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}
.dot.green { background: #22c55e; }
.dot.blue { background: #60a5fa; }
.dot.amber { background: #f59e0b; }

.pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: .5; }
}

/* Expanded Content */
.expanded-content {
  background: #fafaf9;
  border-top: 2rpx solid #f3f4f6;
  overflow: hidden;
}

.content-inner {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.section-title {
  font-size: 20rpx;
  font-weight: bold;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.log-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.log-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.check-icon {
  font-size: 24rpx;
  color: #1f2937;
  margin-top: 4rpx;
}

.log-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #374151;
  font-weight: 500;
  font-family: serif;
  font-style: italic;
}

.add-log-container {
  margin-top: 24rpx;
  margin-left: 48rpx;
}

.add-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  font-size: 20rpx;
  color: #9ca3af;
  padding: 8rpx 16rpx;
  border: 2rpx solid transparent;
  border-radius: 8rpx;
}
.add-btn:active {
  border-color: #e5e7eb;
  color: #4b5563;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.log-input {
  flex: 1;
  font-size: 24rpx;
  background: transparent;
  border-bottom: 2rpx solid #d1d5db;
  padding: 8rpx 0;
  color: #374151;
  font-family: serif;
  font-style: italic;
}

.save-btn {
  font-size: 18rpx;
  font-weight: bold;
  text-transform: uppercase;
  background: #000;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.ai-summary {
  background: #fff;
  padding: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e5e7eb;
  position: relative;
  overflow: hidden;
}

.ai-icon {
  position: absolute;
  top: 0;
  right: 0;
  padding: 16rpx;
  opacity: 0.05;
  font-size: 80rpx;
}

.ai-title {
  font-size: 18rpx;
  font-weight: bold;
  color: #d97706;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.ai-text {
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.6;
}
